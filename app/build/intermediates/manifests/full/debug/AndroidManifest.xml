<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capstone.multiplicationwizard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeBlue" >
        <activity
            android:name="com.capstone.multiplicationwizard.GameActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeOrange" />
        <activity
            android:name="com.capstone.multiplicationwizard.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeBlue"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.capstone.multiplicationwizard.data.MWContentProvider"
            android:authorities="com.capstone.multiplicationwizard.MWItems" />

        <receiver android:name="com.capstone.multiplicationwizard.MultiplicationWizardAppProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/multiplication_wizard_app_provider_info" />
        </receiver>
    </application>

</manifest>